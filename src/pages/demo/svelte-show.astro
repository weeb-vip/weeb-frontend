---
import HeaderHybrid from '../../svelte/components/HeaderHybrid.astro';
import ShowContentWithProvider from '../../svelte/components/ShowContentWithProvider.svelte';
export const prerender = false;

// Get the anime ID from the URL parameters or use a default for demo
const { id } = Astro.params;
const animeId = id || '84595fe7-6622-47d5-abf9-4e962f481e4f'; // Default to specific anime ID for demo
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Anime Details (Svelte Demo)</title>
  </head>
  <body class="bg-white dark:bg-gray-900 min-h-screen">
    <!-- Header -->
    <HeaderHybrid />

    <!-- Main content -->
    <main class="w-full bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen transition-colors duration-300">
      <!-- Show Content Component -->
      <ShowContentWithProvider animeId={animeId} client:load />
    </main>
  </body>
</html>