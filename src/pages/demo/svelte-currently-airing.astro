---
import HeaderHybrid from '../../svelte/components/HeaderHybrid.astro';
import CurrentlyAiringDemo from '../../svelte/components/CurrentlyAiringDemo.svelte';
export const prerender = false;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Currently Airing Anime Demo</title>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 min-h-screen">
    <!-- Header -->
    <HeaderHybrid />

    <div class="container mx-auto p-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
        Currently Airing Anime
      </h1>

      <!-- Currently Airing Demo Component -->
      <CurrentlyAiringDemo client:load />
    </div>
  </body>
</html>