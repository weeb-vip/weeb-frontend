---
import BaseLayout from './BaseLayout.astro';
import HeaderHybrid from '../svelte/components/HeaderHybrid.astro';
import Footer from '../components/Footer';
import { ToastProvider } from '../components/Toast';
import ToastContainer from '../svelte/components/ToastContainer.svelte';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <HeaderHybrid />
  <ToastProvider client:only="react">
    <main class="w-full py-8 px-4 lg:px-16 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen transition-colors duration-300">
      <slot />
    </main>
  </ToastProvider>
  <!-- Svelte Toast Container -->
  <ToastContainer client:load />
  <Footer />
</BaseLayout>