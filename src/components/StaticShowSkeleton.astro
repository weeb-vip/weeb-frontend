---
// Static skeleton that renders immediately without JavaScript
---

<div class="min-h-screen bg-white dark:bg-gray-900 relative transition-colors duration-300">
  <!-- Header skeleton -->
  <header class="sticky top-0 z-40 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700 p-4 transition-colors duration-300">
    <!-- Mobile skeleton -->
    <div class="flex sm:hidden w-full items-center space-x-4">
      <!-- Logo skeleton -->
      <div class="w-10 h-10 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
      <!-- Search skeleton -->
      <div class="flex-grow h-10 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
      <!-- Menu/Profile skeleton -->
      <div class="w-10 h-10 bg-gray-300 dark:bg-gray-600 rounded-full animate-pulse"></div>
    </div>

    <!-- Desktop skeleton -->
    <div class="hidden sm:flex flex-row items-center justify-between space-x-4 mt-4 sm:mt-0">
      <!-- Logo + Wordmark skeleton -->
      <div class="flex items-center space-x-4">
        <div class="flex flex-row space-x-4">
          <div class="w-14 h-14 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
          <!-- WEEB VIP wordmark skeleton -->
          <div class="inline-flex items-center gap-2 sm:gap-3">
            <div class="h-8 w-16 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
            <div class="inline-flex items-center gap-3 px-3 sm:px-4 py-1.5 rounded-2xl ring-1 ring-slate-300/20">
              <div class="h-4 w-8 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-gray-400 animate-pulse"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Search skeleton -->
      <div class="flex-grow max-w-md">
        <div class="h-10 w-full bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
      </div>

      <!-- Right side - Dark mode toggle + Login/Profile skeleton -->
      <div class="flex items-center space-x-4">
        <!-- Dark mode toggle skeleton -->
        <div class="w-12 h-6 bg-gray-300 dark:bg-gray-600 rounded-full animate-pulse"></div>
        <!-- Login/Profile buttons skeleton -->
        <div class="flex items-center space-x-4">
          <div class="h-9 w-16 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
          <div class="h-9 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
        </div>
      </div>
    </div>
  </header>
  <!-- Background banner skeleton -->
  <div class="relative bg-cover bg-center bg-white dark:bg-gray-900 h-[600px] transition-all duration-300 overflow-hidden">
    <div class="absolute block inset-0 bg-white dark:bg-gray-900 w-full h-full transition-colors duration-300"></div>
    <div class="absolute inset-0 w-full h-full bg-gray-200 dark:bg-gray-800 animate-pulse"></div>
  </div>

  <!-- Main content card skeleton -->
  <div class="bg-gray-100 dark:bg-gray-900 -mt-[350px] lg:-mt-[200px] transition-colors duration-300">
    <div class="relative z-10 flex justify-center pt-20">
      <div class="flex flex-col lg:flex-row items-start max-w-screen-2xl w-full mx-4 lg:mx-auto p-6 text-white backdrop-blur-lg bg-black/50 rounded-md shadow-md">
        <!-- Poster skeleton -->
        <div class="h-48 w-32 lg:h-64 lg:w-48 bg-gray-600 rounded-md animate-pulse"></div>

        <!-- Content skeleton -->
        <div class="lg:ml-10 mt-4 lg:mt-0 space-y-4 w-full">
          <div class="h-8 bg-gray-600 rounded w-3/4 animate-pulse"></div>
          <div class="space-y-2">
            <div class="h-4 bg-gray-600 rounded w-full animate-pulse"></div>
            <div class="h-4 bg-gray-600 rounded w-5/6 animate-pulse"></div>
            <div class="h-4 bg-gray-600 rounded w-4/5 animate-pulse"></div>
          </div>
          <div class="flex flex-wrap gap-4 text-sm text-neutral-300">
            <div class="h-4 bg-gray-600 rounded w-16 animate-pulse"></div>
            <div class="h-4 bg-gray-600 rounded w-20 animate-pulse"></div>
            <div class="h-4 bg-gray-600 rounded w-16 animate-pulse"></div>
          </div>
          <div class="flex flex-wrap gap-2">
            {[1,2,3,4,5,6].map(() => (
              <div class="h-6 bg-gray-600 rounded-full w-16 animate-pulse"></div>
            ))}
          </div>
          <div class="flex flex-wrap gap-2 mt-4">
            <div class="h-10 bg-gray-600 rounded w-32 animate-pulse"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content sections skeleton -->
    <div class="bg-gray-100 dark:bg-gray-900 py-8 px-4 sm:px-8 lg:px-16 transition-colors duration-300">
      <div class="max-w-screen-2xl mx-auto flex flex-col gap-8">
        <div class="flex flex-col lg:flex-row gap-8">
          <!-- Details Panel skeleton -->
          <div class="bg-white dark:bg-gray-800 p-4 rounded-md shadow-md text-sm w-full lg:max-w-xs transition-colors duration-300">
            <div class="space-y-6">
              <div class="space-y-3">
                <div class="h-5 w-12 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
                <div class="h-4 w-full bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
                <div class="h-4 w-3/4 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
              </div>
              <div class="space-y-3">
                <div class="h-5 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
                <div class="h-4 w-full bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
                <div class="h-4 w-2/3 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
              </div>
            </div>
          </div>

          <!-- Tabs Section skeleton -->
          <div class="w-full">
            <div class="flex gap-4 border-b pb-2 mb-4">
              <div class="h-8 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
              <div class="h-8 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
              <div class="h-8 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
              <div class="h-8 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
            </div>
            <div class="space-y-4">
              {[1,2,3,4,5,6].map(() => (
                <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
                  <div class="flex gap-4">
                    <div class="h-12 w-20 bg-gray-300 dark:bg-gray-600 rounded animate-pulse flex-shrink-0"></div>
                    <div class="space-y-2 flex-1">
                      <div class="h-4 w-3/4 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
                      <div class="h-3 w-1/2 bg-gray-300 dark:bg-gray-600 rounded animate-pulse"></div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>